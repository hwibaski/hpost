{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "paths": {
      "@core": ["libs/core/src"],
      "@core/*": ["libs/core/src/*"],
      "@core-api": ["apps/core-api/src"],
      "@core-api/*": ["apps/core-api/src/*"],
      "@storage": ["libs/storage/src"],
      "@storage/*": ["libs/storage/src/*"],
      "@support": ["libs/support/src"],
      "@support/*": ["libs/support/src/*"],
      "@usecase": ["libs/usecase/src"],
      "@usecase/*": ["libs/usecase/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
