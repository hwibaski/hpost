{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@core(|/.*)$": "<rootDir>/../../../libs/core/src/$1",
    "^@core-api(|/.*)$": "<rootDir>/../src/$1",
    "^@storage(|/.*)$": "<rootDir>/../../../libs/storage/src/$1",
    "^@support(|/.*)$": "<rootDir>/../../../libs/support/src/$1",
    "^@usecase(|/.*)$": "<rootDir>/../../../libs/usecase/src/$1"
  }
}
